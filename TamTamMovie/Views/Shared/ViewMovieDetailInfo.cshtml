@model TamTamMovie.Models.ModelView.MovieDTO
@{
    Layout = "";
}
@Scripts.Render("~/Scripts/FacebookHandler.js")
<div class="row">
    <div class="col-md-6">
        <span style="display: none;">@Model.Trailers[0].Thumbnail </span>
        <!-- source : https://benmarshall.me/responsive-iframes/ -->
        <div class="embed-responsive embed-responsive-16by9" style="overflow:hidden;position:relative; height:0;padding-bottom:56.25%">
            <iframe class="embed-responsive-item" src="@Model.Trailers[0].Link" allowfullscreen style="width:100%; height:100%;position:absolute;top:0;left:0;"></iframe>
        </div>
        <div id="SocialNetworkButtons">
            <button onclick='login()'>Facebook Login</button>
        </div>
    </div>

    <div class="col-md-6">

        <h2>@Model.Title</h2>
        <h3>Year: @Model.Year</h3>
        
        <h4>Writer(s)</h4>

        @{ string writers = "";
            foreach (var wt in Model.Writers)
            {
                writers = wt + " ,";
            }
            writers += writers.Substring(0, writers.Length - 2);
            <p>@writers</p>
        }

        <h4>Directors</h4>
        @{
            string directors = "";
            foreach (var dir in Model.Directors)
            {
                directors += dir + " ,";
            }
            directors = directors.Substring(0, directors.Length - 2);
            <p>@directors</p>
         }

        <h4>Stars</h4>
        @{
            string stars = "";
            foreach (var star in Model.Stars)
            {
                stars += star + " ,";
            }
            stars = stars.Substring(0, stars.Length - 2);
            <p>@stars</p>
        }

        <h4>Resume</h4>
        <p id="movieResumeText">@Model.Resume</p>

        


    </div>

</div>
</div>
