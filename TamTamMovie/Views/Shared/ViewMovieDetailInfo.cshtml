@model TTMovieModel.Model.Movie
@{
    Layout = "";
}

<div class="row">
    <div class="col-md-6">
        <!-- source : https://benmarshall.me/responsive-iframes/ -->

        <div class="embed-responsive embed-responsive-16by9" style="overflow:hidden;position:relative; height:0;padding-bottom:56.25%">
            <iframe class="embed-responsive-item" src="@Model.Trailer.Link" allowfullscreen style="width:100%; height:100%;position:absolute;top:0;left:0;"></iframe>
        </div>
    </div>

    <div class="col-md-6">

        <h2>@Model.Title.Name</h2>

    </div>

</div>
</div>
